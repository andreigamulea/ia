<h1>Useri care s-au logat</h1>

<span><%= link_to "Vezi utilizatorii unici logați", useriunici_logati_paginisites_path, class: "btn btn-primary" %></span>
<div style="display: inline-block; white-space: nowrap;">
  <h5 style="display: inline;">Total logări:</h5>
  <%=UserPaginisite.count%>
</div>

<div style="display: inline-block; white-space: nowrap;">
  <h5 style="display: inline;">Total logări unici:</h5>
  <%= UserPaginisite.joins(:user).select(:email).distinct.count %>
</div>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nume</th>
      <th>Email</th>
      <th>Pagina accesata</th>
      <th>Data si ora</th>
    </tr>
  </thead>
  <tbody>
    <% @user_paginisite.each do |up| %>
      <tr>
        <td><%= up.user.name %></td>
        <td><%= up.user.email %></td>
        <td><%= up.paginisite.nume %></td>
        <td><%= up.created_at.in_time_zone('Eastern Time (US & Canada)').advance(hours: 7).strftime('%d-%m-%Y %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @user_paginisite %>
