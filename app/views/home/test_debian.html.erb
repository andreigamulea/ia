<!-- app/views/home/test_debian.html.erb -->
<h1>Testare Conexiune Debian</h1>
<p><%= @message %></p>

<!-- Player-ul Video.js folosind URL-ul direct către fișierul video -->
<video id="my-video" class="video-js vjs-default-skin" controls preload="auto" width="640" height="360"
  data-setup='{"fluid": true}'>
  <source src="<%= @video_url %>" type="video/mp4">
  Your browser does not support the video tag.
</video>

<!-- Include stilurile și scriptul Video.js -->
<link href="https://vjs.zencdn.net/7.20.3/video-js.css" rel="stylesheet" />
<script src="https://vjs.zencdn.net/7.20.3/video.js"></script>

<!-- Inițializează player-ul Video.js -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var player = videojs('my-video');
    console.log("Playerul Video.js a fost inițializat cu succes și redă fișierul de la <%= @video_url %>.");
  });
</script>