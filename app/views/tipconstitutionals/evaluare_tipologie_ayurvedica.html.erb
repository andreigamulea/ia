<script>
document.addEventListener('DOMContentLoaded', function() {
  calculateTableTotal('vata-table', 'total-punctaj-vata');
  calculateTableTotal('pitta-table', 'total-punctaj-pitta');
  calculateTableTotal('kapha-table', 'total-punctaj-kapha');
});

function calculateTableTotal(tableId, totalId) {
  const table = document.getElementById(tableId);
  const inputs = table.getElementsByClassName('punctaj-input');

  const calculateTotal = () => {
    let total = 0;
    for (const input of inputs) {
      total += parseInt(input.value) || 0;
    }
    document.getElementById(totalId).innerText = total;
  };

  for (const input of inputs) {
    input.addEventListener('change', calculateTotal);
  }
}



</script>