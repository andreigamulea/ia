<% if flash[:notice] %>
  <p><% flash[:notice] %></p>
<% end %>
<section class="tabel-container rotate-landscape">
    <h1 class="alimente-nutritionale">Lista servicii</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr class= "trdesk">
                    <th>Servicii</th>
                    
                    <th>Detalii</th>
                    <th>Pret</th>
                    <th>Actiune</th>
                </tr>      
            </thead>
            <tbody>
                <% @prods.each do |prod| %>
                    <tr>
                        <td> <%= prod.nume %> </td>
                       
 
                        <td><%= prod.detalii %></td> 
                         <td><%= prod.pret.to_i %> lei</td>

                        <td> <%= link_to 'Comanda', datefacturare_path(s: prod.id), class: 'btn btn-primary' %> </td>      
                    </tr>  
                <% end %>  
            </tbody>
        </table>
    </div>
</section>


