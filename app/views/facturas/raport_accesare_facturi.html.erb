<h1 style="width: 80%; margin: 0 auto;">Raport Accesare Facturi</h1>

<table class="table table-striped" style="width: 80%; margin: 0 auto;">
  <thead>
    <tr>
      <th>Nr.</th>
      <th>User ID</th>
      <th>Nume</th>
      <th>Ultima accesare a paginii</th>
      <th>Numar Accesari</th>
      <th>Numar Download</th>
      <th>Ultimul Download PDF</th>
      <th>An curs 2023-2023</th>
    </tr>
  </thead>
  <tbody>
    <% @report.each_with_index do |row, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= row[:user_id] %></td>
        <td><%= row[:nume] %></td>
        <td><%= row[:data_accesare_pagina].strftime("%Y-%m-%d") %></td>
        <td><%= row[:numar_accesari] %></td>
        <td><%= row[:numar_download] %></td>
        <td><%= row[:data_ultimului_download]&.strftime("%Y-%m-%d") %></td>
        <td><%= row[:an_curs] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
