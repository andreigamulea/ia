<h1 class="alimente-nutritionale" id="VideoNutritie" style="font-size:28px;">Vajikarana</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr class= "desk">
                    <th style="height: 40px; vertical-align:middle; width: 30%;">Servicii</th>                    
                    <th style="height: 40px; vertical-align:middle; width: 30%;">Detalii</th>
                    
                    <th style="height: 40px; vertical-align:middle; width: 14%;">Pret</th>
                    <th style="height: 40px; vertical-align:middle; width: 12%;">Actiune</th>
                </tr>      
            </thead>
            <tbody>
            <% @prods.each do |prod| %>
                <tr>
                    <td><%= prod.nume %></td>                   
                    <td><%= prod.detalii %></td>
                    <td><%= prod.pret %></td>
                    <% if current_user %>
                         <td style="text-align:center;">
                           <%= link_to 'Comanda', datefacturare_path(s: prod.id), class: 'btn btn-primary' %>
                         </td>
                       <% else %>
                         <td style="text-align:center;">
                           <%= link_to 'Comanda', new_user_session_with_return_path('vajikarana'), class: 'btn btn-primary' %>
                         </td>
                       <% end %>
                    
              </tr>
                <% end %>  
            </tbody>
        </table>
    </div>