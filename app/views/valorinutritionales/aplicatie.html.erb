<script>

document.addEventListener("turbo:load", function() {
    // Obține imaginea și modalul
    var img = document.getElementById("myImg");
    var modal = document.getElementById("myModal");
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");

    // Deschide modalul când imaginea este apăsată
    img.onclick = function(){
        modal.style.display = "flex";
        modal.classList.add("active"); // Adaugă clasa "active"
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    // Obține elementul <span> care închide modalul
    var span = document.getElementsByClassName("close")[0];

    // Când utilizatorul apasă pe <span> (x), închide modalul
    span.onclick = function() { 
        modal.classList.remove("active"); // Scoate clasa "active"
        // Așteaptă finalizarea tranziției înainte de a ascunde complet modalul
        setTimeout(function() {
            modal.style.display = "none";
        }, 400); // 400ms este durata tranziției setate în CSS
    }
});



</script>