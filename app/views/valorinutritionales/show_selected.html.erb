<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center mb-4" style="color: green;">Valorile selectate:</h1>

<table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
      <th>Aliment</th>
      <th>Cantitate (g)</th>
      <th>Calorii (kcal)</th>
      <th>Proteine (g)</th>
      <th>Lipide (g)</th>
      <th>Carbohidrati (g)</th>
      <th>Fibre (g)</th>
    </tr>
  </thead>
  <%if @selected_valorinutritionales!=nil%>
  <tbody>
  <% @selected_valorinutritionales.each do |valorinutritionale| %>
    <% id = valorinutritionale.id.to_s %>
    <tr>
      <td><%= valorinutritionale.aliment %></td>
      <td><%= @valorinutritionale_values[id.to_i][:value] if @valorinutritionale_values[id.to_i] %></td>
      <td><%= '%.2f' % (valorinutritionale.calorii * @valorinutritionale_values[id.to_i][:value] / 100) %></td>
      <td><%= '%.2f' % (valorinutritionale.proteine * @valorinutritionale_values[id.to_i][:value] / 100) %></td>
      <td><%= '%.2f' % (valorinutritionale.lipide * @valorinutritionale_values[id.to_i][:value] / 100) %></td>
      <td><%= '%.2f' % (valorinutritionale.carbohidrati * @valorinutritionale_values[id.to_i][:value] / 100) %></td>
      <td><%= '%.2f' % (valorinutritionale.fibre * @valorinutritionale_values[id.to_i][:value] / 100) %></td>
      <% end %>

  <tr>
    <td><strong>Total:</strong></td>
    <td>  -  </td>    
    <td><%= '%.2f' % (@selected_valorinutritionales.map { |v| v.calorii * @valorinutritionale_values[v.id.to_s.to_i][:value] / 100 }.sum) %></td>
    <td><%= '%.2f' % (@selected_valorinutritionales.map { |v| v.proteine * @valorinutritionale_values[v.id.to_s.to_i][:value] / 100 }.sum) %></td>
    <td><%= '%.2f' % (@selected_valorinutritionales.map { |v| v.lipide * @valorinutritionale_values[v.id.to_s.to_i][:value] / 100 }.sum) %></td>
    <td><%= '%.2f' % (@selected_valorinutritionales.map { |v| v.carbohidrati * @valorinutritionale_values[v.id.to_s.to_i][:value] / 100 }.sum) %></td>
    <td><%= '%.2f' % (@selected_valorinutritionales.map { |v| v.fibre * @valorinutritionale_values[v.id.to_s.to_i][:value] / 100 }.sum) %></td>
  </tr>
</tbody> 
</tr>
<%end%>
</table>
</div>  







  