
<section class="tabel-container rotate-landscape">
    <h1 class="alimente-nutritionale">Calculator Valori Nutritionale</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr class= "trdesk">
                    <th style="text-align: left; height: 50px; vertical-align:middle; width: 30%;">Servicii</th>                    
                    <th style="text-align: left; height: 50px; vertical-align:middle; width: 30%;">Detalii</th>
                    <th style="text-align: left; height: 50px; vertical-align:middle; width: 14%;">Pret (fara tva)</th>
                    <th style="text-align: left; height: 50px; vertical-align:middle; width: 14%;">Pret (cu tva)</th>
                    <th style="text-align: left; height: 50px; vertical-align:middle; width: 12%;">Actiune</th>
                </tr>      
            </thead>
            <tbody>
            <% @prods.select{ |prod| prod.curslegatura == 'Nutritie' }.each do |prod| %>
                    <tr>
                        <td> <%= prod.nume %> </td>                        
                        <td><%= prod.detalii %></td> 
                        <td><%= (prod.pret/(1 + TVA / 100.0)).round(2) %> lei</td>
                         <td><%= prod.pret.to_i %> lei</td>

                        <td> <%= link_to 'Comanda', datefacturare_path(s: prod.id), class: 'btn btn-primary' %> </td>      
                    </tr>  
                <% end %>  
            </tbody>
        </table>
    </div>
    <h1 class="alimente-nutritionale">Consultare Selectiva Lista Ingrediente Vegetale</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr class= "trdesk">
                    <th  style="text-align: left; height: 50px; vertical-align:middle; width: 30%;">Servicii</th>                    
                    <th  style="text-align: left; height: 50px; vertical-align:middle; width: 30%;">Detalii</th>
