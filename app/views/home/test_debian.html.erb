<!-- app/views/home/test_debian.html.erb -->
<h1>Testare Conexiune Debian</h1>
<p><%= @message %></p>

<video id="my-video" class="video-js vjs-default-skin" controls preload="auto" width="640" height="360"
  data-setup='{"fluid": true}' oncontextmenu="return false;">
  <source src="<%= @video_url %>" type="video/mp4">
  Your browser does not support the video tag.
</video>

<!-- Include stilurile și scriptul Video.js -->
<link href="https://vjs.zencdn.net/7.20.3/video-js.css" rel="stylesheet" />
<script src="https://vjs.zencdn.net/7.20.3/video.js"></script>

<!-- Inițializează player-ul Video.js și dezactivează contextul -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Detectează dacă utilizatorul folosește un dispozitiv mobil
    var isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

    var player = videojs('my-video', {
      controls: true,
      fluid: true,
      autoplay: isMobile ? false : true, // Pe mobil, autoplay poate fi dezactivat
      userActions: {
        hotkeys: true,
        contextMenu: false // Dezactivează click dreapta pe video (desktop)
      }
    });

    // Dacă este un dispozitiv mobil, ajustează setările
    if (isMobile) {
      player.on('touchstart', function(event) {
        event.preventDefault(); // Previne comportamentele implicite
        player.play(); // Redă video-ul când utilizatorul atinge ecranul
      });
    }

    // Previne deschiderea meniului context pe desktop
    var videoElement = document.getElementById('my-video');
    videoElement.addEventListener('contextmenu', function(event) {
      event.preventDefault();
      return false;
    });

    console.log("Playerul Video.js a fost inițializat cu succes pentru " + (isMobile ? "mobil" : "desktop") + " și opțiunile de descărcare sunt dezactivate.");
  });
</script>
