<section class="tabel-container rotate-landscape">
    <h1 class="alimente-nutritionale" id="CalculatorValoriNutritionale">Transport international</h1>
   
<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr class= "desk">
            <th style="height: 40px; vertical-align:middle; width: 30%;">Servicii</th>                    
            <th style="height: 40px; vertical-align:middle; width: 30%;">Detalii</th>
            
            <th style="height: 40px; vertical-align:middle; width: 14%;">Pret</th>
            <th style="height: 40px; vertical-align:middle; width: 12%;">Actiune</th>
        </tr>      
    </thead>
        <tbody>
        <% @prod_tayt12.select{ |prod| prod.curslegatura == 'tayt12' && prod.pret > 0 }.each do |prod| %>
            
            <% if prod.cod == "cod63"%>
           

                <tr>
                    <td> <%= prod.nume %> </td>         
                                       
                    <td><%= prod.detalii %></td> 
                    
                    <td style="text-align:center;"><%= prod.pret.to_i %> lei</td>
          
                    <td style="text-align:center;"> 
                        <% if (prod.cod == "cod40" || prod.cod == "cod42" || prod.cod == "cod44") && Time.now.to_date >= Date.new(2023,10,19) %>
                            <%= button_to 'Inactiv', '#', class: 'btn btn-secondary', disabled: true %>
                        <% else %>
                            <%= link_to 'Comanda', datefacturare_path(s: prod.id), class: 'btn btn-primary' %> 
                        <% end %>
                    </td>           
                </tr>
              
            <% end %> 
          <% end %>
          
            </tbody>  

        


    </table>
</div>
</section>