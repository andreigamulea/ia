<h1 class="text-center">Raport Sesiune Vara - Accesari inregistrari video</h1>

<p class="text-center">Număr total de utilizatori care au accesat: <%= @numar_utilizatori %></p>

<div class="table-responsive d-flex justify-content-center">
  <table class="table table-striped table-bordered" style="width: 50%;">
    <thead class="thead-dark">
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">Nume</th>
        <th scope="col">Număr Accesări</th>
      </tr>
    </thead>
    <tbody>
      <% @user_reports.each do |report| %>
        <tr>
          <td><%= report[:user_id] %></td>
          <td><%= report[:nume] || 'N/A' %></td>
          <td><%= report[:numar_accesari] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
