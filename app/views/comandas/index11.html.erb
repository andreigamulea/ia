<section class="tabel-container rotate-landscape">
<div class="table-responsive">

<h2>Listă Comenzi Prod1</h2>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
<tr class= "desk">
      <th>User ID</th>
      <th>Produs ID</th>      
      <th>Data inceput</th>
      <th>Data sfarsit</th>
      <th>Validat</th>
      <th>Taxa2324</th>
      <th>Cantitate</th>
      <th>Pret bucata</th>
      <th>Pret total</th>
      <th>Comanda id</th>
      <th>Data crearii</th>
      <!-- Adaugă alte câmpuri după necesități -->
      <th>Acțiuni</th>
    </tr>
  </thead>
  <tbody>
    <% @comenzi_prod1.each do |comanda| %>
      <tr>
        <td><%= comanda.user_id %></td>
        <td><%= comanda.prod_id %></td>        
        <td><%= comanda.datainceput %></td>
        <td><%= comanda.datasfarsit %></td>
        <td><%= comanda.validat %></td>
        <td><%= comanda.taxa2324 %></td>
        <td><%= comanda.cantitate %></td>
        <td><%= comanda.pret_bucata %></td>
        <td><%= comanda.pret_total%></td>
        <td><%= comanda.comanda_id %></td>
        <td><%= comanda.created_at.strftime("%d/%m/%Y") %></td>
        <!-- Afisează alte câmpuri aici -->
        <td>
        <%= link_to 'Edit', edit11_comanda_comanda_path(comanda.id), method: :get %>
        <%= button_to 'Șterge', destroy11_comanda_comanda_path(comanda.id), method: :delete, data: { confirm: 'Ești sigur?' } %>
        

        

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Adaugă Nou', new11_comandas_path %>
</div></div>
</section>