<style>
.action-buttons {
  display: flex;
  gap: 10px;
}
</style>
<div class="container" id="cvp1">
<%= render 'layouts/sideleft' %>

<div class="cr" style="background-color: aliceblue; ">



<h2>Modele de contract ale organizatiei gazda</h2>
<div class="tbland">
<div class="tbr">
<table class="table table-striped table-hover">
<thead>
  <tr>
    <th style="width: 10%;">ID</th>
    <th style="width: 70%;">Nume</th>
    <th style="width: 70%;">Email</th>
    <th>Acțiuni</th>
  </tr>
</thead>
<tbody>
  <% @contract.each do |contract| %>
    <tr>
      <td><%= contract.id %></td>
      <td><%= contract.user_id %></td>
      <td><%= contract.email %></td>
      <td>
      <div class="action-buttons">
      <%= link_to 'View', contracte_path(contract), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_contracte_path(contract), class: 'btn btn-secondary' %>
      <%= button_to 'Delete', contracte_path(contract), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      
    </div>
  </td>
    </tr>
  <% end %>
</tbody>
</table>

</div></div>








<h2>Voluntari</h2>

<div class="tbland">
<div class="tbr">
<table class="table table-striped table-hover">
<thead>
  <tr>
    <th style="width: 10%;">ID</th>
    <th style="width: 70%;">Nume</th>
    <th>Acțiuni</th>
  </tr>
</thead>
<tbody>
  <% @contracte_useri.each do |contract_user| %>
    <tr>
      <td><%= contract_user.id %></td>
      <td><%= contract_user.nume_voluntar %></td>
      <td>
        <div class="action-buttons">
          <%= link_to 'View', vizualizeaza_contract_contracte_path(contract_user), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_contracte_useri_contracte_path(contract_user), class: 'btn btn-secondary' %>
          <%= button_to 'Delete', destroy_contracte_useri_path(contract_user), method: :delete, data: { confirm: 'Are you sure?', turbo: false }, class: 'btn btn-danger' %>
          <%= link_to 'Descarcă PDF', contract_pdf_path(contract_user, format: :pdf), class: "btn btn-primary btn-sm" %>

          </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

</div></div>

</div></div>