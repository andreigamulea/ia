<p style="color: green"><%= notice %></p>

<h1>Produse</h1>
<%= link_to 'Inapoi la Panou administrare', panouadmin_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nume</th>
      <th scope="col">Detalii</th>
      <th scope="col">Info</th>
      <th scope="col">Pret</th>
      <th scope="col">Legatura</th>
      <th scope="col">Zile</th>
      <th scope="col">Link stripe </th>
      <th scope="col">Status </th>
      <th scope="col">Cod </th>
    </tr>
  </thead>
  <tbody>
    <% @prods.each do |prod| %>
      <tr>
        <th scope="row"><%= prod.id %></th>
        <td><%= prod.nume %></td>
        <td><%= prod.detalii %></td>
        <td><%= prod.info %></td>
        <td><%= prod.pret %></td>
        <td><%= prod.curslegatura %></td>
        <td><%= prod.valabilitatezile %></td>
        <td><%= prod.linkstripe %></td>
        <td><%= prod.status %></td>
        <td><%= prod.cod %></td>
        <td>
          <%= link_to "Show", prod, class: "btn btn-primary" %>
          <%= link_to "Edit", edit_prod_path(prod), class: "btn btn-secondary" %>
          <%= link_to "Delete", prod, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New prod", new_prod_path, class: "btn btn-success" %>
