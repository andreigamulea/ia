  <h1>Accesari inregistrari video</h1>
  <p>Număr total de utilizatori care au accesat: <%= @numar_utilizatori %></p>
<div class="container text-center">

  
  <div class="row justify-content-center">
    
    <!-- Primul tabel -->
    <div class="col-md-4">
      <h2>Accesări video</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Nr</th>
              <th scope="col">User ID</th>
              <th scope="col">Nume</th>
              <th scope="col">Număr Accesări</th>
            </tr>
          </thead>
          <tbody>
            <% @user_reports.each_with_index do |report, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= report[:user_id] %></td>
                <td><%= report[:nume] || 'N/A' %></td>
                <td><%= report[:numar_accesari] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Al doilea tabel -->
    <div class="col-md-4">
      <h2>Utilizatori care au acces</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Nr</th>
              <th scope="col">User ID</th>
              <th scope="col">Nume</th>
            </tr>
          </thead>
          <tbody>
            <% @users_with_cod211.each_with_index do |(user_id, name), index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user_id %></td>
                <td><%= name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Al treilea tabel -->
    <div class="col-md-4">
      <h2>Utilizatori fără accesări</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Nr</th>
              <th scope="col">User ID</th>
              <th scope="col">Nume</th>
            </tr>
          </thead>
          <tbody>
            <% @users_purchased_but_not_accessed.each_with_index do |(user_id, name), index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user_id %></td>
                <td><%= name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
</div>
