<h2>Detalii Factură</h2>

<% if @factura_selectata %>
  <pre id="json-output" style="background-color: #f4f4f4; padding: 10px; border: 1px solid #ddd; white-space: pre-wrap;">
    <%= JSON.pretty_generate(@factura_selectata) %>
  </pre>
<% else %>
  <p><%= @error_message || "Nu s-au găsit detalii pentru această factură." %></p>
<% end %>
